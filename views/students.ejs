<!-- views/students.ejs -->
<div class="container">
    <h1>Edit Student Information</h1>

    <% if (student) { %> <!-- Check if a student object is passed to the view -->
        <h2><%= student.firstName %> <%= student.lastName %> - Student: <%= student.studentNum %></h2>
        <hr />
        
        <!-- Form for updating student -->
        <form method="post" action="/student/update">
            <!-- Hidden input to store the student number (for identifying the student) -->
            <input type="hidden" name="studentNum" value="<%= student.studentNum %>" />
            
            <!-- Personal Information Section -->
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" value="<%= student.firstName %>" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" value="<%= student.lastName %>" required />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" type="email" value="<%= student.email %>" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" name="addressStreet" type="text" value="<%= student.addressStreet %>" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" name="addressCity" type="text" value="<%= student.addressCity %>" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address (Province):</label>
                            <input class="form-control" name="addressProvince" type="text" value="<%= student.addressProvince %>" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Status:</label>
                            <div>
                                <!-- Radio buttons for student status (Full-time or Part-time) -->
                                <label><input type="radio" name="status" value="Full Time" <% if (student.status === "Full Time") { %> checked <% } %> /> Full Time</label>
                                <label><input type="radio" name="status" value="Part Time" <% if (student.status === "Part Time") { %> checked <% } %> /> Part Time</label>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

            <hr />
            <!-- Submit button to update the student -->
            <input type="submit" class="btn btn-primary float-right" value="Update Student" />
        </form>
    <% } else { %>
        <!-- If no student data is provided, show a message -->
        <p>No student found with the provided information.</p>
    <% } %>
</div>
