        <%- body %>  <!-- Inject dynamic content here -->
    </div>

    <footer class="text-center mt-4">
        <p>&copy; 2025 Student Website | Designed with simplicity and ease in mind</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
